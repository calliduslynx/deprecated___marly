<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%-8.8thread] %-25.25logger{25} | %msg%ex{short}%n</pattern>
            <!--<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %n${PID:- } [%-10.10t] %-40.40logger{39} : %m%n$</pattern>-->
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>